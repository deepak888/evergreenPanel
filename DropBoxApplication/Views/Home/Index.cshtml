@model DropBoxApplication.Models.UserLoginViewModel
@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="row">
    <div class="col-sm-12">
        <div class="col-md-7 ">
            <div class="jumbotron">
                <div class="clearfix"></div>
                <h2>EverGreen Control Panel</h2>
                <small> <cite title="Source Title" class="pull-left">Microsys India Pvt. Ltd.</cite></small>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-md-5 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Login
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Userlogin", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    { 
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="inputStorel3" class="col-sm-3 control-label">
                                Store Name
                            </label>
                            <div class="col-sm-9">
                                @Html.DropDownListFor(m => m.StoreName, (IEnumerable<SelectListItem>)ViewBag.StoreList, new { id = "StoreName", @class = "form-group form-control" })
                                @Html.ValidationMessageFor(m => m.StoreName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">
                                Name
                            </label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-3 control-label">
                                Password
                            </label>
                            <div class="col-sm-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group last">
                            <div class="col-sm-offset-3 col-sm-9">
                                <input class="btn btn-success btn-sm" type="submit" value="Log in" />
                                <input class="btn btn-default btn-sm" type="reset" value="Reset">
                            </div>
                        </div>
                    }
                </div>
                <div class="panel-footer">
                    Don't have an account!
                    <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                        Sign Up Here
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
